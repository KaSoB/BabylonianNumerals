<Window x:Class="BabylonianNumerals.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BabylonianNumerals"
        mc:Ignorable="d"
        Title="Babiloński System Liczbowy" Height="350" Width="450" MinHeight="350" MinWidth="450" MaxHeight="350" MaxWidth="450" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <Button x:Name="DecimalToSexagesimalButton" Content="Konwersja z systemu dziesiętnego na system sześćdziesiątkowy" VerticalAlignment="Center" Click="DecimalToSexagesimalButton_Click"/>
            <Button x:Name="SexagesimalToDecimalButton" Content="Konwersja z systemu sześćdziesiątkowego na system dziesiętny" VerticalAlignment="Center" Click="SexagesimalToDecimalButton_Click"/>
        </StackPanel>
        <Image Source="Res/Numerals.png"></Image>
    </DockPanel>
</Window>
