<Window x:Class="BabylonianNumerals.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BabylonianNumerals"
        mc:Ignorable="d"
        Title="Babiloński System Liczbowy" Height="450" Width="550" MinHeight="450" MinWidth="550" MaxHeight="450" MaxWidth="550" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <Button x:Name="DecimalToSexagesimalButton" Content="Konwersja z systemu dziesiętnego na system sześćdziesiątkowy" VerticalAlignment="Center" Height="30"  Click="DecimalToSexagesimalButton_Click"/>
            <Button x:Name="SexagesimalToDecimalButton" Content="Konwersja z systemu sześćdziesiątkowego na system dziesiętny" VerticalAlignment="Center" Height="30"  Click="SexagesimalToDecimalButton_Click"/>
        </StackPanel>
        <Image Source="Res/Numerals.png"></Image>
    </DockPanel>
</Window>
